<metro:MetroWindow x:Class="CertifiTrack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CertifiTrack"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        GlowBrush="{DynamicResource AccentColorBrush}"
        BorderThickness="1"
        mc:Ignorable="d"
        Title="Death Certificate Status Updates" Height="550" Width="900" TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="#FF37474F"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto" ContentRendered="Window_Loaded" WindowState="Maximized" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid Margin="0,0,0,0">

        <TextBlock x:Name="textBlock" Margin="10,0" TextWrapping="Wrap" Text="Death Certificate Status" FontWeight="Bold" FontSize="18.667" Foreground="White" TextAlignment="Center" Height="35" VerticalAlignment="Top" Padding="0,6,0,0"/>

        <StackPanel x:Name="panel" Margin="10,70,10,30" Background="#FFACACAC"/>
        <TextBlock FontFamily="Courier New" FontSize="24" FontWeight="Bold" Foreground="#FFF0F0F0" Text="DOD          Name                                 Status                     Approved  DC Type" Margin="14,40,14,0" Height="25" VerticalAlignment="Top" />
        <StatusBar x:Name="status" Margin="0,0,0,1" Height="20" VerticalAlignment="Bottom" Background="#FFD8D8D8">
            <TextBlock x:Name="filePath" TextWrapping="Wrap" Foreground="#DD000000" Margin="0" Padding="7,0,0,0" FontSize="10.667"/>
        </StatusBar>



    </Grid>
</metro:MetroWindow>
