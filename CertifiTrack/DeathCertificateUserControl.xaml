<UserControl x:Class="CertifiTrack.DeathCertificateUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CertifiTrack"
             mc:Ignorable="d" Background="Yellow">
	<UniformGrid Margin="0" Rows="1" Columns="5">
		<TextBlock x:Name="Date" Text="{Binding RepresentableDate, FallbackValue=Date}" Margin="0" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="#FFBD6161" HorizontalAlignment="Center"/>
		<DockPanel VerticalAlignment="Center" HorizontalAlignment="Center">
			<TextBlock x:Name="PatientName" Text="{Binding Name, FallbackValue=Name}" Margin="0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="#FFBD6161" DockPanel.Dock="Top"/>
			<TextBlock x:Name="Doctor" Text="{Binding Doctor, FallbackValue=Doctor}" Margin="0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="#FFBD6161"/>
		</DockPanel>
		<TextBlock x:Name="Location" Text="{Binding Location, FallbackValue=Location}"  Margin="0" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFBD6161"/>
		<TextBlock x:Name="Approved" Text="{Binding IsApproved, FallbackValue=Approved}" Margin="0" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="#FFBD6161" HorizontalAlignment="Center" />
		<TextBlock x:Name="DcType" Text="{Binding IsElectronic, FallbackValue=IsEelectronic}" Margin="0" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="#FFBD6161" HorizontalAlignment="Center"/>
	</UniformGrid>
</UserControl>
